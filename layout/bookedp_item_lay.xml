<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="130dp"
    android:background="@drawable/border_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFD55A"
        />

    <ImageView
        android:id="@+id/productImageBookedP"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="#293250" />

    <TextView
        android:id="@+id/productNameBookedP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/productImageBookedP"
        android:textColor="#FFD56A"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productPriceBookedP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/productImageBookedP"
        android:textColor="#6DD47E"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productQuantBookedP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#6DD47E"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buyerPhoneBookedP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/productImageBookedP"
        android:textColor="#6DD47E"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>